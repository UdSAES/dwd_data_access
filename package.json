{
  "name": "dwd_data_access",
  "version": "2.1.0",
  "description": "Microservice providing weather forecasts and -data based on raw files downloaded from DWD by dwd_data_crawler",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "format": "prettier-standard --lint '**/*.{js,json}'",
    "api-serve": "speccy serve ./docs/openapi_oas3.json",
    "test-unit": "mocha  --grep 'GET' --invert --reporter mochawesome --reporter-options reportDir=./local",
    "test-api": "mocha --reporter mochawesome --reporter-options reportDir=./local test/test_*_api_*",
    "test-all": "npm run lint && npm run test-unit && test-api"
  },
